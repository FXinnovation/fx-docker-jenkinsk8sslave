#!/bin/bash
set -e -x
###
# Installing some basic dependencies
###
apt-get update -qq  
apt-get install -qqy \
  apt-transport-https \
  ca-certificates \
  curl \
  lxc \
  iptables
###
# Installing Docker
###
curl -sSL https://get.docker.com/ | sh
###
# Adding new entrypoint
###
mv /resources/dockerd-entrypoint /usr/local/bin
